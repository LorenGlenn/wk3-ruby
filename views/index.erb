<h1>Welcome to the Salon</h1>

<p>Create a new Stylist:</p>

<form action="/stylists" method="post">
  <label for="name">Name of Stylist:</label>
  <input id="name" name="name" type="text">
  <label for="hours">Stylists hours:</label>
  <input id="hours" name="hours" type="text">

  <button type="submit">Add Stylist</button>
</form>

<p> Add Clients to any Stylist:</p>

<form action="/stylists" method="post">
  <label for="stylist_id">Select a stylist</label>
  <select id='stylist_id' name='stylist_id' type='text'>
    <% @stylists.each() do |stylist| %>
      <option value="<%= stylist.id()%>"> <%= stylist.name() %> </option>
    <% end %>
  </select>

  <label for="client_name">Client's name:</label>
  <input id="client_name" name="client_name" type="text">

  <label for="client_phone">Client's phone:</label>
  <input id="client_phone" name="client_phone" type="text">

  <button type="submit">Add client</button>
</form>
